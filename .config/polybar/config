### Polybar Settings ###

### Colors ###
[colors]
bground = ${xrdb:color0:#222}
fground = ${xrdb:color7:#222}
accent = ${xrdb:color4:#222}

### Bars ###
[bar/main]
monitor =
override-redirect = false 
wm-restack = bspwm
width = 100%
height = 30
radius = 10.0
fixed-center = true
background = ${colors.bground}
foreground = ${colors.fground}

border-left-size = 6 
border-right-size = 6
border-top-size = 6
border-bottom-size = 0
border-color = #00000000

padding-left = 2
padding-right = 2

module-margin-left = 0
module-margin-right = 0

font-0 = "JetBrains Mono Nerd Font:size=9.5;1"
font-1 = "Noto Sans CJK JP:size=9.5;1"

modules-left = launcher player title
modules-center = workspaces
modules-right = pulseaudio battery network ethernet date powermenu

enable-ipc = true
cursor-click = pointer
cursor-scroll = ns-resize

### Launcher ###
[module/launcher]
type = custom/text
content = ""

content-background = ${colors.bground}
content-foreground = ${colors.accent}

click-left = rofi -show drun

### Player ###
[module/player]
type = custom/script
tail = true
format-prefix = "  "
exec = ~/.config/polybar/player.sh

click-left = playerctl --player=spotify,firefox play-pause spotify
scroll-up = playerctl --player=spotify,firefox next spotify
scroll-down = playerctl --player=spotify,firefox previous spotify

### Title ###
[module/title]
type = internal/xwindow

format = <label>
format-background = ${colors.bground}
format-padding = 1

label = "⏽ %title%"
label-maxlen = 25
label-empty = "⏽ Desktop"
label-empty-foreground = ${colors.fground}

### Workspaces ###
[module/workspaces]
type = internal/xworkspaces

pin-workspaces = true

enable-click = true

enable-scroll = true

icon-0 = 1;
icon-1 = 2;
icon-2 = 3;
icon-3 = 4;
icon-4 = 5;
icon-default = 

format = <label-state>

label-monitor = %name%

label-active = 
label-active-foreground = ${colors.fground}

label-occupied = 
label-occupied-foreground = ${colors.fground}

label-urgent = 
label-urgent-foreground = ${colors.accent}

label-empty = 
label-empty-foreground = ${colors.fground}

label-active-padding = 1
label-urgent-padding = 1
label-occupied-padding = 1
label-empty-padding = 1

### Volume ###
[module/pulseaudio]
type = internal/pulseaudio

sink = alsa_output.pci-0000_03_00.6.analog-stereo

use-ui-max = false

interval = 5

format-volume = <ramp-volume> <label-volume>
format-volume-background = ${colors.bground}
format-volume-padding = 1

format-muted = <label-muted>
format-muted-prefix = 婢
format-muted-background = ${colors.bground}
format-muted-padding = 1

label-volume = "%percentage%% "

label-muted = " Muted "
label-muted-foreground = ${colors.accent}

ramp-volume-0 = 奄
ramp-volume-1 = 奔
ramp-volume-2 = 墳

### Battery ###
[module/battery]
type = internal/battery
full-at = 99

battery = BAT0
adapter = ACAD

poll-interval = 2

time-format = %H:%M

format-charging = <animation-charging> <label-charging>
format-charging-background = ${colors.bground}
format-charging-padding = 1

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-background = ${colors.bground}
format-discharging-padding = 1

format-full = <label-full>
format-full-prefix = 
format-full-background = ${colors.bground}
format-full-padding = 1

label-charging = " %percentage%% "
label-discharging = " %percentage%% "
label-full = " Full "

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 

animation-charging-framerate = 750

### Network ###
[module/network]
type = internal/network
interface = wlan0

interval = 1.0
accumulate-stats = true

format-connected = <ramp-signal> <label-connected>
format-connected-background = ${colors.bground}
format-connected-padding = 1

format-disconnected = <label-disconnected>
format-disconnected-prefix = ﲁ
format-disconnected-background = ${colors.bground}
format-disconnected-padding = 1

label-connected = "%{A1:networkmanager_dmenu &:}%essid% %{A}"
label-disconnected = "%{A1:networkmanager_dmenu &:} Offline %{A}"

ramp-signal-0 = 說
ramp-signal-1 = 說
ramp-signal-2 = 說

### Ethernet ###
[module/ethernet]
type = internal/network
interface = enp7s0 

interval = 1.0
accumulate-stats = true

format-connected = <label-connected>
format-connected-prefix = 說
format-connected-background = ${colors.bground}
format-connected-padding = 1

format-disconnected = <label-disconnected>
format-disconnected-prefix = ﲁ
format-disconnected-background = ${colors.bground}
format-disconnected-padding = 1

label-connected = "%{A1:networkmanager_dmenu &:} Online %{A}"
label-disconnected = "%{A1:networkmanager_dmenu &:} Offline %{A}"

### Date/Time ###
[module/date]
type = internal/date
interval = 1.0

time = " %I:%M %p "
time-alt = " %a, %d %b %Y "

format = <label>
format-background = ${colors.bground}
format-padding = 1

label = %time%

### Power Menu ###
[module/powermenu]
type = custom/menu

expand-right = false

format-spacing = 1

label-open = ⏻
label-open-foreground = ${colors.accent}
label-close = ⏼ Cancel
label-close-foreground = ${colors.accent}
label-separator = ⏽
label-separator-foreground = ${colors.fground}

menu-0-0 = 
menu-0-0-exec = systemctl reboot
menu-0-1 = ⏻
menu-0-1-exec = systemctl poweroff
menu-0-2 = 
menu-0-2-exec = bspc quit

### Settings ###
[settings]
screenchange-reload = true
